{
    "parser": "babel-eslint",

    "plugins": ["react", "mocha"],

    "extends": "airbnb",

    "env": {
        // I write for browser
        "browser": true,

        // in CommonJS
        "node": true,

        // with mocha
        "mocha": true
    },

    "rules": {
        "arrow-parens": [2, "as-needed"],
        "arrow-body-style": [0],
        "indent": [2, 4, { "SwitchCase": 1 }],
        "comma-dangle": [2, "never"],
        "one-var": [0],
        "prefer-const": [0],
        "space-before-function-paren": [2, "never"],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "quote-props": [0],
        "max-len": [0],
        "global-require": [0],
        "import/no-unresolved": [0],
        "no-param-reassign": [0],
        "no-underscore-dangle": [0],
        "one-var-declaration-per-line": [0],
        "react/prefer-stateless-function": [0],

        "mocha/no-exclusive-tests": 2,
        "mocha/no-skipped-tests": 2,
        "mocha/no-pending-tests": 2,
        "mocha/handle-done-callback": 2,
        "mocha/no-global-tests": 2,

        "new-cap": [2, {
          "capIsNewExceptions": [
              "Immutable",
              "Map",
              "List",
              "Record",
              "DragDropContext",
              "DragLayer",
              "DragSource",
              "DropTarget",
              "URI"
          ]
        }]
    },

    "globals": {
        "DEBUG": false,
        "TESTING": false,
        "PRODUCTION": false,

        "define": false,
        "require": false,

        "describe": false,
        "context": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false,
        "it": false,
        "expect": false,
        "sinon": false
    }
}
